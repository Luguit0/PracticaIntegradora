<div class="container">
    <h2>Editar producto</h2>
    <form class="py-2" id="editProduct">
        <input type="text" class="form-control" readonly id="id" name="id" value="{{ product.id }}">
        <input required type="text" class="form-control" id="title" name="title" value="{{ product.title }}">
        <input required type="text" class="form-control" id="description" name="description" value="{{ product.description }}">
        <input required type="text" class="form-control" id="code" name="code" value="{{ product.code }}">
        <input required type="number" class="form-control" id="price" name="price" value="{{ product.price }}">
        <input required type="number" class="form-control" id="stock" name="stock" value="{{ product.stock }}">
        <input required type="text" class="form-control" id="category" name="category" value="{{ product.category }}">                        
        <input type="text" class="form-control" id="thumbnails" name="thumbnails" value="{{ product.thumbnails }}">
        <button type="submit"  value="send" class="btn btn-primary">Submit</button>
    </form>
        
</div>
<script src="/js/edit.js"></script>